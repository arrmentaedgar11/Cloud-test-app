# -------- Build stage --------
FROM maven:3.9.8-eclipse-temurin-17 AS build
WORKDIR /app

COPY pom.xml .
COPY src ./src
RUN mvn -B clean package -DskipTests

# -------- Run stage --------
FROM eclipse-temurin:17-jre
WORKDIR /app

# Cloud Run uses PORT env var; Spring reads it from application.properties
ENV JAVA_OPTS=""

COPY --from=build /app/target/cloud-test-app-0.0.1-SNAPSHOT.jar app.jar

# Cloud Run listens on 8080 inside the container
EXPOSE 8080

CMD ["sh", "-c", "java $JAVA_OPTS -jar app.jar"]
